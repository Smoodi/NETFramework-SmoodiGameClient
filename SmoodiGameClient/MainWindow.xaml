<Window x:Class="SmoodiGameClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmoodiGameClient"
        Icon="Assets/dbfox.ico"
        mc:Ignorable="d"
        Title="SmoodiGames" Height="450" Width="800" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None" Loaded="Window_Loaded">
    <Grid>
        <Image Source="http://www.smoodi.de/smoodigames/launcher/welcome.png" HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="800" Visibility="Hidden"/>
        <MediaElement Source="http://www.smoodi.de/smoodigames/launcher/welcome.mp4" HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="800"/>
        <Label x:Name="status" Content="Receiving update server information..." HorizontalAlignment="Left" Margin="10,414,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.5,0" Width="780" Background="#00000000" Foreground="White"/>
    </Grid>
</Window>
